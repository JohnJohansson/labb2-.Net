@*tells the page what model it should use
    it connects back to the Model.cs file in the Models map
*@
@model labb2.Models.Model
@{
    ViewData["Title"] = "Sida tre";
}

<h2>Sida 3</h2>

<form method="post">

    @*these need to be the same as in our model
      <div asp-validation-summary="All"></div> gives error messages for all the empthy fields
    *@
    <div asp-validation-summary="ModelOnly"></div>
    <label asp-for="Name"></label>
    <input asp-for="Name" />

    @*gives error message for code*@
    <span asp-validation-for="Name"></span>
    <br>
    <label asp-for="Genre"></label>

    <select asp-for="Genre">
